@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model EADProject.Models.Reservation

<br /><br />

<form action="/Reservation/CancelReservationView" method="post">

<div class="row">
     
        <div class="col-md-2">
            <div class="list-group">
                <a href="/Others/ReservationCriteriaView" class="list-group-item active" style="background-color:seagreen">Reservation Criteria</a>
            </div>
        </div>

        <div class="col-md-3">
        </div>

        <div class="col-md-7">
            <label style="font-size:20px">Cancel Reservation</label>
        </div>
</div>

<div class="row">       
        <div class="col-md-2">
            <div class="list-group">
                <a href="/Others/RefundPolicyView" class="list-group-item active" style="background-color:seagreen">Refund Policy</a>
            </div>
        </div>

       <div class="col-md-8">
       </div>


         <div class="col-md-2">
            <div class="list-group">
                <a href="/Others/BookingOfficesView" class="list-group-item active" style="background-color:seagreen">Manual Booking Offices</a>
            </div>
        </div>

 </div> 

<div class="row">       
        <div class="col-md-2">
            <div class="list-group">
                <a href="/Others/SaloonView" class="list-group-item active" style="background-color:seagreen">Saloon</a>
            </div>
        </div>

       <div class="col-md-2">
       </div>


     <div class="col-md-2">
         <label>Enter Username : </label>
     </div>


    <div class="col-md-2">
         @Html.TextBoxFor(x=>Model.Username , new { @class="form-control" , name="Username" , style="width:200px ; height:35px" , placeholder="Enter Username" , required="required"} )            
    </div>

    <div class="col-md-2">
    </div>

        <div class="col-md-2">
            <div class="list-group">
                <a href="/Reservation/CancelReservationView" class="list-group-item active" style="background-color:seagreen">Cancel Reservation</a>
            </div>
        </div>


</div>

 <div class="row">
       
        <div class="col-md-2">
            <div class="list-group">
                <a href="#" class="list-group-item active" style="background-color:seagreen">Classes</a>
                <a href="#" class="list-group-item">Economy Class</a>
                <a href="#" class="list-group-item">Business Class</a>
                <a href="#" class="list-group-item">AC Parlour</a>
                <a href="#" class="list-group-item">AC Sleeper</a>
            </div>
        </div>

       <div class="col-md-2">
       </div>

     <div class="col-md-2">
         <label>Cancel Reservation : </label><br /><br /><br /><br />
         <label>Enter your Contact-No : </label>
     </div>

    <div class="col-md-2">
        @Html.TextBoxFor(x=>Model.NoOfTickets , new { @class="form-control" , name="NoOfTickets" , style="width:200px ; height:35px" , placeholder="No of tickets to cancel" , required="required"} )<br /><br />
          @Html.TextBoxFor(x=>Model.ContactNo , new { @class="form-control" , name="ContactNo" , style="width:200px ; height:35px" , placeholder="Enter Contact No" , required="required"} )
      
         <br /><br /><br />
             <input type="submit" class="btn btn-success" style="height:35px" value="Cancel Reservation"/> 
             @if(@ViewBag.x != null)
             {
             <p style="font-size:25px">@ViewBag.x</p> 
             }            
    </div>

    <div class="col-md-2">
    </div>

          <div class="col-md-2">
            <div class="list-group">
                <a href="/Comment/CommentView" class="list-group-item active" style="background-color:seagreen">Comment</a>
            </div>
         </div>


</div>




    </form>
