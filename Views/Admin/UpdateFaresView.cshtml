@{
    ViewBag.Title = "UpdateFaresView";
}


@model EADProject.Models.Fare

<html>
<head>
    <script src="~/Scripts/jqueryfile.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-2.1.1.js"></script>
    <link href="~/Contents/bootstrap.css" rel="stylesheet" />

    <title>Update Fares</title>
</head>



<body>

<form action="/Admin/SetUpdatedFares" method="post">
    
<div class="container">
<br /><br />
  <h3>Update Fares....</h3><br /><br />
  <div class="panel panel-default" style="width:600px ; margin-left:250px">
    <div class="panel-body">
        <br />

          <label style="margin-top:10px">From</label>
          <input type="text" class="form-control" required ="required" value="@Model.From_" name="from"/>
        
          <label style="margin-top:5px">To</label>              
          <input type="text" class="form-control" required ="required" value="@Model.To" name="to"/>
          
          <label style="margin-top:10px">Train Name</label>              
          <input type="text" class="form-control" required ="required" value="@Model.TrainName" name="tname" />
          
          <label style="margin-top:5px">Class</label>                    
          <input type="text" class="form-control" required ="required" value="@Model.Class" name="class" />
          
          <label style="margin-top:10px">Fare</label>                     
          <input type="text" class="form-control" required ="required" value="@Model.Fare1" name="fare"/>
          
          <br />
          <input type="submit" class="btn btn-success pull-right" style="width:150px" value="Update" id="button" />
                

    </div>
  </div>
</div>

</form>


</body>
</html>
